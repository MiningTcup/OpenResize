<Window x:Class="OpenResize_Helper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenResize_Helper"
        mc:Ignorable="d"
        Title="OpenResize" Height="150" Width="260" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="2" FontFamily="Bahnschrift" FontSize="15" Click="CreateSchedule">Add</Button>
        <Button Grid.Column="3" Grid.Row="2" FontSize="15" FontFamily="Bahnschrift" Click="RemoveSchedule">Remove</Button>
        <TextBlock Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" TextAlignment="Center" Text="Add or remove OpenResize from the scheduler." TextWrapping="Wrap" FontFamily="Bahnschrift" FontSize="15"/>
    </Grid>
</Window>
